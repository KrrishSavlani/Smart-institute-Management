<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
         android:text="Faculty"
        android:layout_marginLeft="100dp"
        android:textSize="44dp"
        android:layout_marginTop="3dp"
        ></TextView>


    <Button
        android:id="@+id/timetableButton"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:text="Time table"
        android:textSize="24dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="7dp"
        ></Button>

    <Button
        android:id="@+id/leaveButton"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:text="Leave"
        android:textSize="24dp"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="7dp"
        ></Button>

    <Button
        android:id="@+id/lessonPlanButton"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:text="Lesson Plane"
        android:textSize="23dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="7dp"
        ></Button>

    <Button
        android:id="@+id/ExamButton"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:text="Exam"
        android:textSize="24dp"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="7dp"
        ></Button>

    <Button
        android:id="@+id/HolidayButton"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:text="Holiday"
        android:textSize="24dp"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="7dp"
        ></Button>

    <Button
        android:id="@+id/studentButton"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:text="Studant"
        android:textSize="24dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="7dp"
        ></Button>

    <Button
        android:id="@+id/FeedbackButton"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:text="Feedback"
        android:textSize="24dp"
        android:layout_marginTop="590dp"
        android:layout_marginLeft="7dp"
        ></Button>
    
    <TextView
        android:id="@+id/attendenceContainer"
        android:layout_width="190dp"
        android:layout_height="450dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="205dp"
        android:background="#bfdbfe"
        ></TextView>

    <TextView
        android:id="@+id/currentMonthattendence"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="250dp"
        android:background="#87B1E5"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="current Month"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="250dp"
        android:textSize="19dp"
        ></TextView>

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="250dp"
        android:background="#87B1E5"
        android:id="@+id/previousMonthAttendence"
        ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="previous Month"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="250dp"
        android:textSize="19dp"
        ></TextView>

    <TextView
        android:id="@+id/AverageAttendence"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="395dp"
        android:layout_marginLeft="250dp"
        android:background="#87B1E5"
        ></TextView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average"
        android:layout_marginTop="495dp"
        android:layout_marginLeft="250dp"
        android:textSize="19dp"
        ></TextView>








</RelativeLayout>